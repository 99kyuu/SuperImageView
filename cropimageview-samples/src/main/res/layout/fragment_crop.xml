<android.support.percent.PercentFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin">

  <com.cesards.samples.cropimageview.ui.widget.DumbFrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      custom:layout_heightPercent="50%">

    <com.cesards.samples.cropimageview.ui.widget.CroppedAreaImageView
        android:id="@+id/crop_image_original"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:translationZ="6dp"
        custom:elevation="6dp"/>

  </com.cesards.samples.cropimageview.ui.widget.DumbFrameLayout>

  <com.cesards.cropimageview.CropImageView
      android:id="@+id/crop_image_cropped"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_gravity="bottom"
      custom:layout_heightPercent="50%"/>

</android.support.percent.PercentFrameLayout>